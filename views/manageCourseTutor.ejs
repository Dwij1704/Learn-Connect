        <script>
            const tableBody = document.querySelector('tbody');
        
            tableBody.addEventListener('click', (event) => {
                if (event.target.classList.contains('add-slot-btn')) {
                    const input = event.target.previousElementSibling;
                    const timeSlot = input.value;
                    if (timeSlot.trim() !== '') {
                        const slotsCell = event.target.parentElement;
                        const slotsContainer = slotsCell.querySelector('.slots-container');
                        slotsContainer.innerHTML += `<div class="time-slot">${timeSlot}</div>`;
                        input.value = '';
                    }
                }
            });
        </script>
